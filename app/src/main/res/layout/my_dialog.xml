<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/tvDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Do you want to exit ?"
    android:layout_marginTop="20dp"
    android:textAppearance="?android:attr/textAppearanceLarge"/>

    <Button
        android:text="No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNo"
        android:layout_alignBaseline="@+id/btnYes"
        android:layout_alignBottom="@+id/btnYes"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnYes"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/tvDialog"
        android:layout_toLeftOf="@+id/btnNo"
        android:layout_toStartOf="@+id/btnNo" />

</RelativeLayout>